<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base theme for the app -->
    <style name="Theme.ArogyaMitra" parent="android:Theme.Material.NoActionBar">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>
    
    <!-- Splash screen theme -->
    <style name="Theme.ArogyaMitra.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">#102218</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher_foreground</item>
        <item name="postSplashScreenTheme">@style/Theme.ArogyaMitra</item>
    </style>
</resources>
